<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    android:orientation="vertical">

    <!-- 顶部导航栏 -->
    <include layout="@layout/toolbar_with_title_and_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 功能区 -->
        <LinearLayout
            android:id="@+id/function_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white_quai"
            android:orientation="horizontal">

            <!-- 施工人员信息 -->
            <LinearLayout
                android:id="@+id/worker_info_layout"
                style="@style/me_userLayout_linearLayout_style">
                <ImageView
                    style="@style/me_userLayout_imageView_style"
                    android:src="@mipmap/ic_worker_info"/>
                <TextView
                    android:id="@+id/work_textview"
                    style="@style/me_userLayout_textView_style1"
                    android:text="人员信息"/>
            </LinearLayout>
            <View
                style="@style/me_vertical_view_style"/>
            <!-- 完工图片 -->
            <LinearLayout
                android:id="@+id/finish_img_layout"
                style="@style/me_userLayout_linearLayout_style">
                <ImageView
                    style="@style/me_userLayout_imageView_style"
                    android:src="@mipmap/ic_finish_image"/>
                <TextView
                    style="@style/me_userLayout_textView_style1"
                    android:text="完工图片"/>
            </LinearLayout>
            <View
                style="@style/me_vertical_view_style"/>
            <!-- 消息 -->
            <LinearLayout
                android:id="@+id/device_bound_layout"
                style="@style/me_userLayout_linearLayout_style">
                <ImageView
                    style="@style/me_userLayout_imageView_style"
                    android:src="@mipmap/ic_device_bound"/>
                <TextView
                    style="@style/me_userLayout_textView_style1"
                    android:text="设备绑定"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 功能区 -->
        <LinearLayout
            android:id="@+id/check_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white_quai"
            android:orientation="horizontal"
            android:layout_below="@+id/function_layout">

            <!-- 实时参数 -->
            <LinearLayout
                android:id="@+id/real_time_param_layout"
                style="@style/me_userLayout_linearLayout_style">
                <ImageView
                    style="@style/me_userLayout_imageView_style"
                    android:src="@mipmap/ic_real_time_param"/>
                <TextView
                    style="@style/me_userLayout_textView_style1"
                    android:text="实时参数"/>
            </LinearLayout>
            <View
                style="@style/me_vertical_view_style"/>
            <!-- 查看视频 -->
            <LinearLayout
                android:id="@+id/real_time_video_layout"
                style="@style/me_userLayout_linearLayout_style">
                <ImageView
                    style="@style/me_userLayout_imageView_style"
                    android:src="@mipmap/ic_real_time_video"/>
                <TextView
                    style="@style/me_userLayout_textView_style1"
                    android:text="实时视频"/>
            </LinearLayout>
            <View
                style="@style/me_vertical_view_style"/>
            <!-- 现场编号设定 -->
            <LinearLayout
                android:id="@+id/site_id_layout"
                style="@style/me_userLayout_linearLayout_style">
                <ImageView
                    style="@style/me_userLayout_imageView_style"
                    android:src="@mipmap/ic_site_id"/>
                <TextView
                    style="@style/me_userLayout_textView_style1"
                    android:text="现场编号"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 确认提交 -->
        <Button
            android:id="@+id/confirm_apply_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:text="确认提交"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16"/>

    </RelativeLayout>


</LinearLayout>