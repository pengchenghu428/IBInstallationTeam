<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/bg_round_white"
    android:layout_marginBottom="10dp"
    android:padding="5dp">

    <!-- 图标 -->
    <ImageView
        android:id="@+id/device_image_iv"
        android:layout_centerVertical="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:src="@mipmap/ic_camera"/>

    <!-- 名称 -->
    <TextView
        android:id="@+id/device_name_tv"
        android:layout_toRightOf="@id/device_image_iv"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="摄像头"
        android:textColor="@color/black" />

    <!-- 名称 -->
    <TextView
        android:id="@+id/device_number_tv"
        android:layout_toLeftOf="@id/device_delete_iv"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight = "15dp"
        android:text="120120120" />

    <!-- 删除 -->
    <ImageView
        android:id="@+id/device_delete_iv"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_delete_device"/>

</RelativeLayout>
