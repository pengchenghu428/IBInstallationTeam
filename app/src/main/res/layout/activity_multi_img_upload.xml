<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorMainBackground">

    <!-- 顶部导航栏 -->
    <include layout="@layout/toolbar_with_title_and_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMainBackground"
        android:orientation="vertical">

        <!-- 图片显示画布 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@color/colorMainBackground"
            android:orientation="vertical">
            <!-- 上传的图 -->
            <com.automation.ibinstallationteam.widget.image.SmartImageView
                android:id="@+id/left_image_display_iv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_add_upload_image"
                android:scaleType="fitCenter"
                android:background="@drawable/bg_white_quai"/>
            <Button
                android:id="@+id/left_upload_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary"
                android:text="上传左图"
                android:textSize="@dimen/textSize_16"/>
        </LinearLayout>

        <!-- 图片显示画布 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@color/colorMainBackground"
            android:orientation="vertical">
            <!-- 上传的图 -->
            <com.automation.ibinstallationteam.widget.image.SmartImageView
                android:id="@+id/right_image_display_iv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_add_upload_image"
                android:scaleType="fitCenter"
                android:background="@drawable/bg_white_quai"/>
            <Button
                android:id="@+id/right_upload_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary"
                android:text="上传右图"
                android:textSize="@dimen/textSize_16"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>