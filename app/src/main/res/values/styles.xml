<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Remove Window Title. -->
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- toolbar-->
        <!-- 修改toolbar图标的颜色-->
        <item name="android:textColorSecondary">#ffffff</item>
        <!-- 修改toolbar文字的颜色-->
        <item name="android:textColorPrimary">#ffffff</item>
    </style>

    <!-- 全屏 -->
    <style name="AppThemeFullscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- welcome activity -->
    <style name="AppNameTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AppStatementTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/sliver</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--login activity-->
    <!-- 按钮样式-->
    <style name="btnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_button_dark</item>
    </style>

    <!-- 文本编辑框样式-->
    <style name="editStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- “设置”框 字体样式 -->
    <style name="usertextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_tab_selector</item>
    </style>

    <!-- “设置”框 字体样式 -->
    <style name="itemTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_tab_selector</item>
    </style>

    <!-- “我的” 文本右边箭头样式 -->
    <style name="img_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@mipmap/icon_user_arrow_more</item>
    </style>

    <!--dialog-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>
    <!-- 弹窗：加载中 -->
    <style name="loadingDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item><!--设置dialog的背景-->
        <item name="android:windowFrame">@null</item><!--Dialog的windowFrame框为无-->
        <item name="android:windowNoTitle">true</item><!--是否显示title-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--是否半透明-->
        <item name="android:windowContentOverlay">@null</item><!--是否半透明-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog
        </item><!-- 对话框是否有遮盖 -->
        <item name="android:backgroundDimEnabled">false</item><!--背景是否模糊显示-->
        <item name="android:backgroundDimAmount">0.6</item><!--背景的灰度-->
    </style>

    <!-- 主界面样式 -->
    <!-- primary activity -->
    <style name="base_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 竖直分割线 -->
    <style name="me_vertical_view_style">
        <item name="android:layout_width">0.5dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#50666666</item>
    </style>
    <!-- 水平分割线 -->
    <style name="me_horizontal_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">#50666666</item>
    </style>
    <!-- textview  and drawable -->
    <style name="me_userLayout_textView_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">25dp</item>
        <item name="android:background">@drawable/list_view_item_click</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/grad</item>
        <item name="android:textSize">@dimen/textSize_14</item>
    </style>
    <!-- 图片和文本框选项 -->
    <style name="me_userLayout_linearLayout_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/list_view_item_click</item>
    </style>

    <style name="me_userLayout_imageView_style">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">5dp</item>
        <!--<item name="android:layout_marginTop">10dp</item>-->
    </style>

    <style name="me_userLayout_textView_style1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grad</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <!-- 横向相对布局 -->
    <style name="me_common_item_relativeLayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/list_view_item_click</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">15dp</item>
    </style>
    <!-- 右二维码 -->
    <style name="me_common_item_qr_code_imageView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/ic_login_qreode</item>
    </style>
    <!-- 右箭头样式 -->
    <style name="me_common_item_arrow_right_imageView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/arrow_right_my_gray</item>
    </style>

    <!-- 横向选项的 -->
    <style name="me_common_item_title_textView_style" parent="base_textView_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:textColor">@color/grad</item>
    </style>
    <!-- 数字提示 -->
    <style name="me_common_item_count_textView_style" parent="base_textView_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray01</item>
        <item name="android:textSize">@dimen/textSize_12</item>
    </style>

    <style name="me_common_item_count_with_organgered_bg_textView_style" parent="me_common_item_count_textView_style">
        <item name="android:background">@mipmap/bg_num_organge_red</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--更多-->
    <style name="more_common_item_textView_style" parent="me_common_item_title_textView_style">
        <item name="android:textSize">@dimen/textSize_16</item>
    </style>

    <style name="more_common_desc_textView_style" parent="base_textView_style">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">@dimen/textSize_15</item>
        <item name="android:textColor">@color/gray01</item>
    </style>
    <!-- 含有右箭头的内容 -->
    <style name="more_common_desc_align_left_textView_style" parent="more_common_desc_textView_style">
        <item name="android:layout_alignParentEnd">false</item>
    </style>
    <!-- 功能模块布局 -->
    <style name="more_common_linearlayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/me_item_common_layout_marginTop</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_white_quai</item>
    </style>

    <!-- 项目详情 -->
    <!-- 吊兰出库页面 -->
    <!-- paremeter activity -->
    <style name="content_title_textview" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/sliver</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <!-- 工单页面 -->
    <!-- 吊篮状态管理 -->
    <style name="MgOrderStateRelativeLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="MgOrderStateTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="MgOrderStateView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!-- 工单页面 -->
    <!-- 工单Item -->
    <style name="ItemLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">2dp</item>
    </style>
    <!-- 工单名称：大字体 -->
    <style name="ItemNameTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
    </style>
    <!-- 提示字段 -->
    <style name="ItemHintTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/sliver</item>
    </style>
    <!-- 内容字段 -->
    <style name="ItemContentTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center|center_vertical</item>
    </style>
    <!-- 内容字段 -->
    <style name="ItemContent2TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 图片字段 -->
    <style name="ItemContentImageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- 完工上传图片页面 -->
    <style name="MultiLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/colorMainBackground</item>
    </style>
    <style name="MultiSmartImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@mipmap/ic_add_upload_image</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/bg_white_quai</item>
    </style>
    <style name="MultiButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/textSize_16</item>
    </style>

    <!-- 新建人员信息 -->
    <style name="WorkerInfoLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/bg_round_white</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="InputItemTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize_18</item>
    </style>
    <style name="InputItemEditView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
